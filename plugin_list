\       "AfterFunction": "true",
\       "AfterNamespace":"true",
\       "AfterObjCDeclaration": "true",
\       "AfterStruct": "true",
\       "BeforeCatch": "true",
\       "BeforeElse":"true",
\       "IndentBraces":"false"
\       },
\ "AllowShortFunctionsOnASingleLine": "None",
\ "AlignAfterOpenBracket": "true"
\ }
"autocmd FileType cpp nnoremap <buffer><Leader>cf :<C-u>ClangFormat<CR>
